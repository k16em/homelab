services:
  webui:
    image: ghcr.io/open-webui/open-webui:main
    volumes:
      - type: bind
        source: ./.open-webui
        target: /app/backend/data
    environment:
      OLLAMA_BASE_URL: http://{{ ansible_default_ipv4.address }}:11434
    extra_hosts:
      - "host.docker.internal:host-gateway"
    dns:
      - 1.1.1.1
    restart: always
    networks:
      - reverse-proxy

networks:
  reverse-proxy:
    external: true
